<section class="contact">
            <div class="container">
                <div class="content">
                    <a class="home-and-contact" asp-controller="Default" asp-action="Home">
                
                        <i class="fa-solid fa-house"></i>
                        <p class="home">Home</p>
                    </a>

                    <i class="fa-solid fa-angles-right"></i>
                    <p class="contact">Contact</p>
                </div> 

                <div class="info">
                    <h1>Contact Us</h1>

                    <div class="email-us">
                        <div class="icon">
                            <div class="round">
                                <i class="fa-regular fa-envelope"></i>
                            </div>
                        </div>

                        <div class="email-content">
                            <h4>Email Us</h4>
                            <p>Please feel free to drop us a line. We will respond as soon as possible.</p>
                    <a  asp-controller="Contact" asp-action="Index" asp-fragment="form-email">Leave a message <i class="fa-solid fa-arrow-right-long"></i></a>
                        </div>
                    </div>

                    <div class="careers">
                        <div class="icon">
                            <div class="round">
                                <i class="fa-solid fa-user-group"></i>
                            </div>
                        </div>   

                        <div class="text">
                            <h4>Careers</h4>
                            <p>Sit ac ipsum leo lorem magna nunc mattis maecenas non vestibulum.</p>
                    <a href="#">Send an application <i class="fa-solid fa-arrow-right-long"></i></a>
                        </div>
                </div>
        
                </div>

                <div class="get-contact">
                    <h2>Get In Contact With Us</h2>
                    <i class="fa-solid fa-angle-down"></i>
                    <div class="contact-form">
                        <form id="form-email" asp-controller="Contact" asp-action="Index"  method="post">
                            <div class="form-group">
                                <label for="full-name">Full Name</label>
                                <input type="text" class="form-control" id="full-name" name="full-name" required>

                                <label for="email">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" required>

                                <label for="service">Service<span>(optional)</span></label>
                                <select class="form-control" id="service" name="service">
                                    <option value="default">Choose a service</option>                                 
                                    <option value="web-development">Web Development</option>
                                    <option value="fullsatck-development">Full-Stack Development</option>
                                    <option value="frontend">Front End Development</option>
                                    <option value="design">UX Design</option>
                                    
                                    <option value="other">Other</option>
                                </select>

                                <label class="message" for="message">Message</label>

                                <textarea class="form-control" id="message" name="message" required></textarea>

                                <button type="submit" class="btn-theme">Send Contact Request</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>  

            <div class="map">           
                <iframe title="Google Maps"  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d260535.41276248198!2d17.652423731277125!3d59.325725903858036!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f763119640bcb%3A0xa80d27d3679d7766!2sStockholm!5e0!3m2!1sen!2sse!4v1710699415511!5m2!1sen!2sse"
                width="100wh" height="870"
                style="border:0;" allowfullscreen="" 
                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        
            </div>  
        </section>